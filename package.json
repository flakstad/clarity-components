{
  "name": "clarity-outline",
  "version": "1.0.0",
  "description": "A powerful, keyboard-driven outline component built as a modern web component with embedded styling",
  "main": "outline.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "dev": "python3 -m http.server 8000"
  },
  "keywords": [
    "web-component",
    "todo",
    "task-management",
    "keyboard-navigation",
    "custom-status",
    "metadata",
    "popup",
    "dom-manipulation"
  ],
  "author": "Andreas Flakstad",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.1",
    "jsdom": "^23.0.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "collectCoverageFrom": [
      "outline.js",
      "!**/node_modules/**",
      "!**/test/**"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  }
}
